@model MyBlog.Web.Models.ArticleDetailRightSideBarViewModel
@{
}
<!-- Sidebar Widgets Column -->
<div class="col-md-4">
    <div class="card my-4">
        <img src="~/img/@Model.User.Picture" class="card-img-top text-center image-thumbnail mt-1 mb-1" alt="@Model.User.UserName" />
        <h5 class="card-header text-center">@Model.User.UserName</h5>
        <div class="card-body">
            <p class="card-text text-center">@Model.User.About</p>
            <div class="card-footer text-center">
                <p>Sosyal Medya Linkleri</p>
                @if (!string.IsNullOrEmpty(Model.User.LinkedInLink))
                {
                    <a href="@Model.User.LinkedInLink"><span class="fab fa-linkedin"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.GitHubLink))
                {
                    <a href="@Model.User.GitHubLink"><span class="fab fa-github-square"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.TwitterLink))
                {
                    <a href="@Model.User.TwitterLink"><span class="fab fa-twitter-square"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.FacebookLink))
                {
                    <a href="@Model.User.FacebookLink"><span class="fab fa-facebook-square"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.InstagramLink))
                {
                    <a href="@Model.User.InstagramLink"><span class="fab fa-instagram"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.YoutubeLink))
                {
                    <a href="@Model.User.YoutubeLink"><span class="fab fa-youtube-square"></span></a>
                }
                @if (!string.IsNullOrEmpty(Model.User.WebsiteLink))
                {
                    <a href="@Model.User.WebsiteLink"><span class="fas fa-home"></span></a>
                }
            </div>
        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">@Model.Header</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-danger">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

